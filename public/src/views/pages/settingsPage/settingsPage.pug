mixin field(label, type, name, placeholder, index)
    .field

        .field__header
            .field__header__error

        .field__main
            input.field__main__input(type=type, name=name, placeholder=placeholder, maxlength='32')
            .field__main__label= label
            if type === 'password'
                input.hidden(id=`settings__show__password${index}` type='checkbox')
                label.field__main__show-password.pointer(for=`settings__show__password${index}`) &#x1f441;

.modal__window_theme_settings
.container.container_theme_settings
    .form__header
        input#settings-back.hidden(type='button')
        label(for='settings-back')
            img.back-button.pointer(src='img/Back.svg')
        .form__header__logo Settings
    form.form.form_theme_settings(action='#', method='post')
        .container_theme_settings-left
            .form__inputs
                +field('Username', 'text', 'username', 'Username', 1)
                +field('New Password', 'password', 'newPassword', 'Password', 2)
                +field('Repeat New Password', 'password', 'repeatNewPassword', 'Password', 3)
                +field('Old Password', 'password', 'oldPassword', 'Password', 4)
            .form__buttons
                .form__buttons__button
                    button.button.button_theme_submit.pointer(type='submit') Confirm
        input#choose-avatar.hidden(type='checkbox')
        label.container_theme_settings-right.pointer(for='choose-avatar')
            .avatar__text-content
                | Choose avatar
            .carousel__item__spinner.carousel__item__spinner_size_s.hidden
            img.avatar__image.hidden