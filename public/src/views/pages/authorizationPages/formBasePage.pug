.form__header
    .form__header__logo= logotype
form.form.form_theme_popup(action='#', method='post')

    .form__inputs
        each field, index in formFields
            .field

                .field__header
                    .field__header__error

                .field__main
                    input.field__main__input(type=field.type, name=field.name, placeholder=field.placeholder, maxlength='32')
                    .field__main__label= field.label
                    if field.type === 'password'
                        input.hidden(id=`show__password${index}` type='checkbox')
                        label.field__main__show-password.pointer(for=`show__password${index}`) &#x1f441;

    .form__buttons
        .form__buttons__button
            button.button.button_theme_submit.pointer(type='submit')= submitButtonName

        if otherButtonName
            .form__buttons__button
                label(for=`mod${nextFormNumber}`)
                    div.button.button_theme_main.pointer= otherButtonName