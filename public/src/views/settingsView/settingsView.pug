mixin field(label, type, name, placeholder)
    .form__input
        .form__input__header
            .form__error
            .form__label= label
        input(type=type, name=name, placeholder=placeholder, maxlength='32')

#settings.settings
    .form__logo Settings
    form(action='#', method='post')
        .form__inputs__left
            .form__inputs
                +field('Username', 'text', 'username', 'Human325')
                +field('Old Password', 'password', 'oldPassword')
                +field('New Password', 'password', 'newPassword')
                +field('Repeat New Password', 'password', 'repeatNewPassword')
            .form__buttons
                .form__button
                    button(type='submit') Confirm
        input#avatar(type='file', name='avatar', accept='image/jpeg,image/png,image/gif')
        label.form__inputs__right(for='avatar')
            .settings__load__avatar
                | Choose avatar
            img